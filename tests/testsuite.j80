LD X, 10
ST [2010h], X
LD Y, [BA+16]
CMP X, Y
LD C, 1
JMPNZ ld_r_pp_test_fail

LD X, 16
ST [2000h], X
LD Y, [BA]
CMP X, Y
LD C, 2
JMPNZ ld_r_pp_test_fail

